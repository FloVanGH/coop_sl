import { AppManager } from "../app_manager.slint"; 

import { HeaderBar, OutlineButton, CheckBox, Switch, ScrollView, co, mi } from "../_imports/co_widgets.slint";

export Page := GridLayout {
    callback open_keyboard(string, string, string, string);
    property<string> title <=> i_header_bar.title;
    property<bool> keyboard_check_box: true;
    property<bool> disabled_check_box: true;

    Row {
        i_header_bar := HeaderBar {
            if(root.keyboard_check_box) : CheckBox {
                y: (parent.height - height) / 2;
                text: "Keyboard enabled";
                selected <=> AppManager.keyboard_enabled;
            }

            if(root.disabled_check_box) : CheckBox {
                y: (parent.height - height) / 2;
                text: "Widgets enabled";
                selected <=> AppManager.widgets_enabled;
            }

            Switch {
                y: (parent.height - height) / 2;
                on_icon: mi.lightbulb;
                off_icon: mi.nights_stay;
                selected: !co.dark_theme;
                selected_changed(selected) => {
                    co.dark_theme = !selected;
                }
            }
        }
    }

    Row {
        ScrollView {  
            @children
        }    
    }
}