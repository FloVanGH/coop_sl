import { Page } from "page.slint";
import { RowTitle, ColumnTitle } from "titles.slint";

import { Button, OutlineButton, RoundButton, RoundOutlineButton, Spacer, HorizontalSeparator,
    VerticalSpacerMedium, TextLine, CheckBox, Switch, mi, co } from "../_imports/co_widgets.slint";

import { settings } from "../settings.slint";

export BasicsPage := Page {
    title: "Basics";

    GridLayout {  
        padding: co.spaces.large;
        spacing: co.spaces.medium;
       
        // Button
        Row {
            RowTitle {
                text: "Button";
            }
        }

        Row {
            ColumnTitle {  
                text: "Text";
            }

            Spacer {}

            ColumnTitle {  
                text: "Icon";
            }

            Spacer {}

            ColumnTitle {  
                text: "Text+Icon";
            }

            Spacer {}

            ColumnTitle {  
                text: "Primary";
            }
        }

        Row {
            HorizontalSeparator {
                colspan: 8; 
            }
        }

        Row {
            Button {
                text: "Button";
                enabled: settings.widgets_enabled;
            }

            Spacer {}

            Button {
                icon: mi.plus;
                enabled: settings.widgets_enabled;
            }

            Spacer {}

            Button {
                text: "Button";
                icon: mi.plus;
                enabled: settings.widgets_enabled;
            }

            Spacer {}

            Button {
                primary: true;
                text: "Primary";
                enabled: settings.widgets_enabled;
            }
        }

        Row {
            VerticalSpacerMedium {}
        }

        // OutlineButton
        Row {
            RowTitle {
                text: "OutlineButton";
            }
        }  

        Row {
            ColumnTitle {  
                text: "Text";
            }

            Spacer {}

            ColumnTitle {  
                text: "Icon";
            }

            Spacer {}

            ColumnTitle {  
                text: "Text+Icon";
            }
        }

        Row {
            HorizontalSeparator {
                colspan: 8; 
            }
        }

        Row {
            OutlineButton {
                text: "OutlineButton";
                enabled: settings.widgets_enabled;
            }

            Spacer {}

            OutlineButton {
                icon: mi.plus;
                enabled: settings.widgets_enabled;
            }

            Spacer {}

            OutlineButton {
                text: "OutlineButton";
                icon: mi.plus;
                enabled: settings.widgets_enabled;
            }
        }

        Row {
            VerticalSpacerMedium {}
        }

        // RoundButton
        Row {
            RowTitle {
                text: "RoundButton";
            }
        }  

        Row {
            ColumnTitle {  
                text: "Text";
            }

            Spacer {}

            ColumnTitle {  
                text: "Icon";
            }
        }

        Row {
            HorizontalSeparator {
                colspan: 8; 
            }
        }

        Row {
            RoundButton {
                text: "A";
                enabled: settings.widgets_enabled;
            }

            Spacer {}

            RoundButton {
                icon: mi.plus;
                enabled: settings.widgets_enabled;
            }
        }

        Row {
            VerticalSpacerMedium {}
        }

        // RoundOutlineButton
        Row {
            RowTitle {
                text: "RoundOutlineButton";
            }
        }  

        Row {
            ColumnTitle {  
                text: "Text";
            }

            Spacer {}

            ColumnTitle {  
                text: "Icon";
            }

            Spacer {}
            Spacer {}
            Spacer {}

            ColumnTitle {  
                text: "Primary";
            }
        }

        Row {
            HorizontalSeparator {
                colspan: 8; 
            }
        }

        Row {
            RoundOutlineButton {
                text: "A";
                enabled: settings.widgets_enabled;
            }

            Spacer {}

            RoundOutlineButton {
                icon: mi.plus;
                enabled: settings.widgets_enabled;
            }

            Spacer {}
            Spacer {}
            Spacer {}

            RoundOutlineButton {
                primary: true;
                icon: mi.plus;
                enabled: settings.widgets_enabled;
            }
        }

        Row {
            VerticalSpacerMedium {}
        }

        // TextLine
        Row {
            RowTitle {
                text: "TextLine";
            }
        }  

        Row {
            ColumnTitle {  
                text: "Empty";
            }

            Spacer {}

            ColumnTitle {  
                text: "Icon";
            }

            Spacer {}

            ColumnTitle {  
                text: "Icon+HasClear";
            }
        }

        Row {
            HorizontalSeparator {
                colspan: 8; 
            }
        }

        Row {
            TextLine {
                enabled: settings.widgets_enabled;
                clickable: settings.keyboard-enabled;

                clicked => { settings.open_keyboard(); }
            }

            Spacer {}

            TextLine {
                icon: mi.search;
                text: "Hello";
                enabled: settings.widgets_enabled;
                clickable: settings.keyboard-enabled;

                clicked => { settings.open_keyboard(); }
            }

            Spacer {}

            TextLine {
                icon: mi.search;
                has-clear: true;
                text: "Hello";
                enabled: settings.widgets_enabled;
                clickable: settings.keyboard-enabled;

                clicked => { settings.open_keyboard(); }
            }
        }

        Row {
            VerticalSpacerMedium {}
        } 

        // Switch
        Row {
            RowTitle {
                text: "Switch";
            }
        }  

        Row {
            ColumnTitle {  
                text: "No Icons";
            }

            Spacer {}

            ColumnTitle {  
                text: "Icons";
            }
        }

        Row {
            HorizontalSeparator {
                colspan: 8; 
            }
        }

        Row {
            Switch {
                enabled: settings.widgets_enabled;
            }

            Spacer {}

            Switch {  
                on_icon: mi.check;
                off_icon: mi.close;
                enabled: settings.widgets_enabled;
                selected: true;
            }
        }

        Row {
            VerticalSpacerMedium {}
        } 

        // CheckBox
        Row {
            RowTitle {
                text: "CheckBox";
            }
        }  

        Row {
            ColumnTitle {  
                text: "No Text";
            }

            Spacer {}

            ColumnTitle {  
                text: "Text";
            }
        }

        Row {
            HorizontalSeparator {
                colspan: 8; 
            }
        }

        Row {
            CheckBox {
                enabled: settings.widgets_enabled;
            }

            Spacer {}

            CheckBox {  
                text: "CheckBox";
                enabled: settings.widgets_enabled;
                selected: true;
            }
        }

        // Fills the remaining available space
        Row {
            Spacer {}
        }
    }
}