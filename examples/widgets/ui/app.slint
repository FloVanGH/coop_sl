import { CoopWindow, KeyboardPage, KeyboardAdapter, GroupItemModel, coop, mi } from "_imports/coop_widgets.slint";
import { BasicsPage, TypoPage, BrushesPage, ListPage } from "pages/pages.slint";
import { AppManager } from "app_manager.slint"; 
import { SideBarView } from "side_bar_view.slint";

export { KeyboardAdapter, coop }
export { AppManager }

export App := CoopWindow {
    min_width: 800px;
    title: "Widgets gallery";

    Rectangle {
        background: coop.theme.brushes.background;
    }

    keyboard_page := KeyboardPage {
        keyboard_closed(key, text) => {
            AppManager.update_text(key, text);
        } 

        GridLayout {   
            Rectangle {  
                col: 1;

                if(i_side_bar.current_item.parent == 0 &&  i_side_bar.current_item.item == 0) : BasicsPage {
                    open_keyboard(key, text, placeholder, icon) => { keyboard_page.open-keyboard(key, text, placeholder, icon); }
                }
                if(i_side_bar.current_item.parent == 0 &&  i_side_bar.current_item.item == 1) : ListPage {}
                if(i_side_bar.current_item.parent == 1 &&  i_side_bar.current_item.item == 0) : BrushesPage {}
                if(i_side_bar.current_item.parent == 1 &&  i_side_bar.current_item.item == 1) : TypoPage {}
            }
            i_side_bar := SideBarView {
                col: 0;
                parent_width: root.width;
                title: "Gallery";
                responsive: true;

                property <GroupItemModel> widgets: {
                    text: "Widgets",
                    items: [
                        { leading_icon: mi.widgets, text: "Basics" },
                        { leading_icon: mi.list, text: "Lists" },
                    ]
                };

                property <GroupItemModel> resources: {
                    text: "Resources",
                    items: [
                        { leading_icon: mi.brush, text: "Brushes" },
                        { leading_icon: mi.font_download, text: "Typography" },
                    ]
                };
  
                navigation_items: [widgets, resources];
            }
        }
    }
}  