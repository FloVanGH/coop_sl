import { CoopWindow, KeyboardPage, KeyboardAdapter, ParentItemModel, coop } from "_imports/coop_widgets.slint";
import { BasicsPage, TypoPage } from "pages/pages.slint";
import { AppManager } from "app_manager.slint"; 
import { SideBarView } from "side_bar_view.slint";

export { KeyboardAdapter, coop }
export { AppManager }

export App := CoopWindow {
    min-width: 1000px;
    title: "Widgets gallery";

    Rectangle {  
        background: coop.theme.brushes.background;
    }

    keyboard_page := KeyboardPage {
        keyboard_closed(key, text) => {
            AppManager.update_text(key, text);
        } 

        HorizontalLayout {   
            i_side_bar := SideBarView {
                property <ParentItemModel> widgets: {
                    text: "Widgets",
                    items: [
                        { leading_icon: "", text: "Basics", trailing_icon: ""},
                    ]
                };

                property <ParentItemModel> resources: {
                    text: "Resources",
                    items: [
                        // { leading_icon: "", text: "Brushes", trailing_icon: ""},
                        { leading_icon: "", text: "Typography", trailing_icon: ""},
                    ]
                };
  
                navigation_items: [widgets, resources];
            }
        
            if(i_side_bar.current_item.parent == 0 &&  i_side_bar.current_item.item == 0) : BasicsPage {
                open_keyboard(key, text, placeholder, icon) => { keyboard_page.open-keyboard(key, text, placeholder, icon); }
            }
            if(i_side_bar.current_item.parent == 1 &&  i_side_bar.current_item.item == 0) : TypoPage {}
        }
    }
}  