import { CoWindow, OutlineButton, Button , co, mi } from "../../../widgets/co_widgets/co_widgets/co_widgets.slint";

export Widgets := CoWindow {
    width: 600px;
    height: 400px;
    title: "Widgets gallery";

    property<bool> default_primary: true;
    property<brush> current_primary <=> co.accent_color;

    callback update_theme();

    update-theme => {  
        if(default_primary) {
            current_primary = co.dark_theme ? #01fec5 : #1d9bf2;
        } else {
            current_primary = co.dark_theme ? #6750A4 : #D0BCFF;
        }
    }

    VerticalLayout {  
        padding: co.spaces.medium;
        spacing: co.spaces.medium;

        OutlineButton {
            text: "light / dark";
            clicked => { 
                co.dark_theme = !co.dark_theme; 
                update_theme();
            }
        }

        OutlineButton {
            text: "Change primary";
            clicked => {  
                root.default_primary = !root.default_primary;
                update_theme();
            }
        }

        Button {
            text: "Filled";
            clicked => { debug("Filled clicked") }
        }

        Button {
            text: "Icon";
            icon: mi.settings;
            clicked => { debug("Filled clicked") }
        }

        Button {
            text: "Primary";
            primary: true;
            clicked => { debug("Primary clicked") }
        }
    }
}  