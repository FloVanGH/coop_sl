            }
        }

        Row {
            HorizontalSeparator {
                colspan: 8;
            }
        }

        Row {
            ProgressIndicator {
                colspan: 2;
                progress: (i-slider.value - i-slider.minimum) / (i-slider.maximum - i-slider.minimum);
            }

            Spacer {}

            ProgressIndicator {
                // colspan: 2;
                indeterminate: true;
            }

            Spacer {}
        }

