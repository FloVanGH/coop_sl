        Row {
            HorizontalLayout {
                alignment: start;

                Button {
                    text: "Button";
                    enabled: AppManager.widgets-enabled;
                }
            }

            Spacer {}

            HorizontalLayout {
                alignment: start;

                Button {
                    icon: Icons.add;
                    enabled: AppManager.widgets-enabled;
                }
            }

            Spacer {}

            HorizontalLayout {
