                    x: i-popup-button.x;
                    y: i-popup-button.y - 40px - Space.small;
                    width: i-popup-button.width;
                    height: 40px;

                    layout := VerticalLayout {
                        padding: Space.medium;

                        SmallLabel {
                            text: "Popup content";
                        }
                    }
                }
