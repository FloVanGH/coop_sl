component ThemeBookPage inherits BookPage {
    background: transparent;
    title-color: Palette.foreground;
    number-color: Palette.foreground;
    separator-color: Palette.border-disabled;
    title-font-size: Typography.small-title.font-size;
    title-font-weight: Typography.small-title.font-weight;
    number-font-size: Typography.small-label.font-size;
    number-font-weight: Typography.small-label.font-weight;
}

component ThemeTextPage inherits TextPage {
    background: transparent;
    text-color: Palette.foreground;
    title-color: Palette.foreground;
    number-color: Palette.foreground;
    separator-color: Palette.border-disabled;
    title-font-size: Typography.small-title.font-size;
    title-font-weight: Typography.small-title.font-weight;
    text-font-size: Typography.medium-label.font-size;
    text-font-weight: Typography.medium-label.font-weight;
    number-font-size: Typography.small-label.font-size;
    number-font-weight: Typography.small-label.font-weight;
}

