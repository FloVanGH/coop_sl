import { BookPage } from "book_page.slint";

export component TextPage inherits BookPage {
     // Defines the text of the page.
     in property <string> text <=> i_text.text;

     // Defines the color of the text label.
     in property <brush> text_color <=> i_text.color;

     // Defines the font size of the text label.
     in property <length> text_font_size <=> i_text.font_size;

     // Defines the font weight of the text label.
     in property <int> text_font_weight <=> i_text.font_weight;

     // Defines the font family of the text label.
     in property <string> text_font_family <=> i_text.font_family;

     i_text := Text {
        horizontal_alignment: left;
        wrap: word_wrap;
        color: black;
     }
}

