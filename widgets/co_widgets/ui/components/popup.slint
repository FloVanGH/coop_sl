import { co } from "../co/co.slint";

// `PopupBorder` can used to draw boder and background of a `Popup`.
export PopupBorder := Rectangle {
    background: co.theme.brushes.background_alt;
    border_radius: co.theme.radius.medium;
    border_width: 1px;
    border_color: co.theme.brushes.border;
    clip: true;
}

// `Popup` is used to show a popup overlay.
export Popup := PopupWindow {
    PopupBorder {  
        @children
    }
}