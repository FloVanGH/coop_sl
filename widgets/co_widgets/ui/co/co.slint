import  { Brushes } from "brushes.slint";
import  { Durations } from "durations.slint";
import  { Icons } from "icons.slint";
import  { States } from "states.slint";
import  { Radius } from "radius.slint";
import  { Settings } from "settings.slint";
import  { Sizes } from "sizes.slint";
import  { Spaces } from "spaces.slint";
import  { Typo, Font } from "typo.slint";

import "../assets/fonts/Roboto-Regular.ttf";
import "../assets/fonts/Roboto-Medium.ttf";

// Access to the style resources of teh `co` theme (dark and light).
export global co := { 
    // Toggles between light and dark theme.
    property<bool> dark_theme: true;

    // Defines the accent (primary) brush.
    property<brush> accent_color: dark_theme ? #01fec5 : #1d9bf2;

    // Defines the on accent (primary) brush.
    property<brush> on_accent_color:  dark_theme ? #212121 : #dfdfdf;

    // Additional theme settings.
    property<Settings> settings: {
        minimize: false,
    };

    // Access the brushes definitions of the `co` theme.
    property<Brushes> brushes : {
        background: dark_theme ? #2d2d2d : #dfdfdf,
        foreground: dark_theme ? #dfdfdf : #2d2d2d,
        foreground_disabled: dark_theme ? #7b7b7b : #a0a0a0,
        surface: dark_theme ? #505050 : #BDBDBD,
        surface_disabled: dark_theme ? #3d3d3d : #d2d2d2,
        on_surface: dark_theme ? #212121 : #dfdfdf,
        primary: accent-color,
        on_primary: on_accent_color,
        border: dark_theme ? #7e7e7e : #505050,
        border_disabled: dark_theme ? #494949 : #c5c5c5,
        state: #000000,
    };

    // Access the animation duration definitions of the `co` theme.
    property<Durations> durations : {
        slow: 500ms,
        medium: 250ms,
        fast: 150ms,
    };

     // Access the animation duration definitions of the `co` theme.
     property<Icons> icons : {
        size_small: 12px,
        size_medium: 14px,
        size_large: 16px,
    };

    // Access the state definitions of the `co` theme.
    property<States> state : {
        hover: 0.2,
        pressed: 0.4,
        container_disabled: 0.38,
        content_disabled: 0.38,
    };

    // Access the radius definitions of the `co` theme.
     property<Radius> radius : {
        extra_small: 4px,
        small: 6px,
        medium: 8px,
        large: 16px,
    };

    // Access the size definitions of the `co` theme.
    property<Sizes> sizes: {
        extra_small: 20px,
        small: 26px,
        medium: 32px,
        large: 44px,
    };

    // Access the space definitions of the `co` theme.
    property<Spaces> spaces: {
        small: 4px,
        medium: 8px,
        large: 16px,
    };

     // Access the space definitions of the  `co` theme.
     property<Typo> typo: {
        label_small: {
            family: "Roboto",
            size: 10px,
            weight: 400
            
        },
        label_medium: {
            family: "Roboto",
            size: 12px,
            weight: 500      
        },
        label_large: {
            family: "Roboto",
            size: 14px,
            weight: 500
        },
        title_small: {
            family: "Roboto",
            size: 16px,
            weight: 500      
        },
        title_medium:{
            family: "Roboto",
            size: 20px,
            weight: 500      
        },
        title_large: {
            family: "Roboto",
            size: 24px,
            weight: 500      
        },
    };
}