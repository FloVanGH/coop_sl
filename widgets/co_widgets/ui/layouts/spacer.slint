import { co } from "../co/co.slint";

// Fills the remaining spae in a layout.
export Spacer := Rectangle {}

// Fills vertical space with `co.theme.spaces.small`.
export VerticalSpacerSmall := Spacer {
    height: co.theme.spaces.small;
}

// Fills vertical space with `co.theme.spaces.medium`.
export VerticalSpacerMedium := Spacer {
    height: co.theme.spaces.medium;
}

// Fills vertical space with `co.theme.spaces.large`.
export VerticalSpacerLarge := Spacer {
    height: co.theme.spaces.large;
}

// Fills horizontal space with `co.theme.spaces.small`.
export HorizontalSpacerSmall := Spacer {
    width: co.theme.spaces.small;
}

// Fills horizontal space with `co.theme.spaces.medium`.
export HorizontalSpacerMedium := Spacer {
    width: co.theme.spaces.medium;
}

// Fills horizontal space with `co.theme.spaces.large`.
export HorizontalSpacerLarge := Spacer {
    width: co.theme.spaces.large;
}