// `CenterLayout` aligns its child vertical and horizontal center.
export component CenterLayout inherits VerticalLayout {
    alignment: center;

    HorizontalLayout {  
        alignment: center;

        @children
    }
}

// Example for the viewer.
component Example inherits Rectangle {
    width: 400px;
    height: 400px;
    background: red;

    CenterLayout {  
        Rectangle {  
            min_width: 100px;
            min_height: 100px;
            background: blue;
        }
    }
}