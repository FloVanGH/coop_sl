import { Theme } from "../coop/theme.slint";

// `PopupBorder` can used to draw border and background of a `Popup`.
export component PopupBorder inherits Rectangle {
    background: Theme.brushes.background;
    border_radius: Theme.radius.medium;
    border_width: 1px;
    border_color: Theme.brushes.border;
    clip: true;
}

// `Popup` is used to show a popup overlay.
export component Popup inherits PopupWindow {
    PopupBorder {  
        @children
    }
}

import { Button } from "../widgets/button.slint";

component Example inherits Rectangle {
    layout := VerticalLayout {  
        alignment: center;
        Button {
            text: "open popup";
            clicked => { popup.show() }
        }
    }
   
    popup := Popup {
        y: layout.height + layout.y;
        x: layout.x;
        width: 60px;
        height: 20px;

        Text {
            x:0;y:0;
            text: "popup content";
        }
    }
}