// workaround to get font displayed embedded on the softwarerendrer
// import "../assets/fonts/Roboto-Regular.ttf"; 
// import "../assets/fonts/Roboto-Medium.ttf"; 

import { Font } from "../coop/typo.slint";
import { coop } from "../coop/coop.slint";

// `BaseLabel` represents the base for `coop` labels. Set font settings by font property.
export BaseLabel := Text {
    // Defines the font settings.
    in property <Font> font;

    color: coop.theme.brushes.foreground;
    // font_family: font.family;
    font_size: font.size;
    font_weight: font.weight;
}

// `SmallLabel` is a label with settings `coop.theme.typo.small_label`.
export SmallLabel := BaseLabel {
    font: coop.theme.typo.small_label;
}

// `MediumLabel` is a label with settings `coop.theme.typo.medium_label`.
export MediumLabel := BaseLabel {
    font: coop.theme.typo.medium_label;
}

// `LargeLabel` is a label with settings `coop.theme.typo.large_label.
export LargeLabel := BaseLabel {
    font: coop.theme.typo.large_label; 
}

// `ErrorLabel` is a `ErrorLabel` displayed with error text color.
export ErrorLabel := BaseLabel {
    font: coop.theme.typo.small_label;
    color: coop.theme.brushes.error;
}


// `SmallTitle` is a label with settings `coop.theme.typo.small_title`.
export SmallTitle := BaseLabel {
    font: coop.theme.typo.small_title;
}

// `MediumTitle` is a label with settings `coop.theme.typo.medium_title`.
export MediumTitle := BaseLabel {
    font: coop.theme.typo.medium_title;
}

// `LargeTitle` is a label with settings `coop.theme.typo.large_title.
export LargeTitle := BaseLabel {
    font: coop.theme.typo.large_title;
}